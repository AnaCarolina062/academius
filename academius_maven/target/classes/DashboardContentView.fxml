<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Dashboard" textFill="#1f1f1f">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" left="40.0" top="30.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" prefHeight="150.0" spacing="30.0">
            <children>
                <VBox alignment="CENTER_LEFT" prefHeight="120.0" prefWidth="180.0" style="-fx-background-color: #e6f7ff; -fx-background-radius: 10; -fx-border-color: #91d5ff; -fx-border-radius: 10;">
                    <children>
                        <Label text="Cursos" textFill="#005a9e"><font><Font name="System Bold" size="16.0" /></font></Label>
                        <Label fx:id="cursosCountLabel" text="0" textFill="#003a66">
                            <font><Font name="System Bold" size="36.0" /></font>
                            <VBox.margin><Insets top="5.0" /></VBox.margin>
                        </Label>
                    </children>
                    <padding><Insets left="20.0" /></padding>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>